- if @article.errors.any?
  %h2 The following errors prevented the article from saving:
  %ul
    - @article.errors.full_messages.each do |msg|
      %li= msg
= form_for @article do |f|
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.submit
= link_to 'Back', articles_path